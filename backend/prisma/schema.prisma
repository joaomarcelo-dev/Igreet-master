// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Adms {
  id       String @id @default(uuid())
  photo    String
  name     String
  email    String
  password String
}

model Patients {
  id           String         @id @default(uuid())
  name         String
  phone        String
  cpf          String
  birthDate    String
  address      String
  Appointments Appointments[]
}

model Appointments {
  id        String   @id @default(uuid())
  date      String
  hour      String
  patientId String
  patient   Patients @relation(fields: [patientId], references: [id])
}

model Services {
  id             String @id @default(uuid())
  phone          String
  time           String
  expirationTime String
}

model DaysOfAtendence {
  id   String @id @default(uuid())
  date String
  hour String
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Adms {
  id       String  @id @default(uuid())
  photo    String
  name     String
  email    String?
  password String
}

model Patients {
  id           String         @id @default(uuid())
  name         String
  phone        String
  cpf          String
  birthDate    String
  address      String
  Appointments Appointments[]
}

model Appointments {
  id               String   @id @default(uuid())
  patientId        String
  dayOfAtencenceId String
  complet          Boolean  @default(false)
  updateAt         DateTime @updatedAt
  createAt         DateTime @default(now())
  imgURL           String?

  patient        Patients        @relation(fields: [patientId], references: [id])
  dayofatendence DaysOfAtendence @relation(fields: [dayOfAtencenceId], references: [id])
}

model DaysOfAtendence {
  id        String @id @default(uuid())
  date      String
  hourStart String
  hourEnd   String
  title     String

  Appointments Appointments[]
}

model Service {
  id       String   @id @default(uuid())
  code     String   @unique
  phone    String
  imgURL   String
  createAt DateTime @default(now())
}
